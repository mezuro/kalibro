<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
						http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="Kalibro" transaction-type="RESOURCE_LOCAL">
		<class>org.kalibro.core.persistence.record.ReadingGroupRecord</class>
		<class>org.kalibro.core.persistence.record.ReadingRecord</class>

		<class>org.kalibro.core.persistence.record.ConfigurationRecord</class>
		<class>org.kalibro.core.persistence.record.MetricConfigurationRecord</class>
		<class>org.kalibro.core.persistence.record.RangeRecord</class>

		<class>org.kalibro.core.persistence.record.ProjectRecord</class>
		<class>org.kalibro.core.persistence.record.RepositoryRecord</class>

		<class>org.kalibro.core.persistence.record.ThrowableRecord</class>
		<class>org.kalibro.core.persistence.record.StackTraceElementRecord</class>

		<class>org.kalibro.core.persistence.record.ProcessingRecord</class>
		<class>org.kalibro.core.persistence.record.ProcessingNotificationRecord</class>		
		<class>org.kalibro.core.persistence.record.MetricConfigurationSnapshotRecord</class>
		<class>org.kalibro.core.persistence.record.RangeSnapshotRecord</class>

		<class>org.kalibro.core.persistence.record.ModuleResultRecord</class>
		<class>org.kalibro.core.persistence.record.MetricResultRecord</class>
		<class>org.kalibro.core.persistence.record.DescendantResultRecord</class>
